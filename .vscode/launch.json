  "version": "0.2.0",
  "configurations": [  
    {
      "name": "Debugging js-moment",
      "type": "node",
      "request": "launch",
      "args": [
        "${workspaceRoot}/src/index.ts"
      ],
      "runtimeArgs": [
        "--loader",
        "ts-node/esm"
      ],
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen" 
    },
    {
      "name": "Current TS File",
      "type": "node",
      "request": "launch",
      "args": [
        "${relativeFile}"
      ],
      "runtimeArgs": [
        "--loader",
        "--nolazy",
        "ts-node/esm",
      ],
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "internalConsoleOptions": "neverOpen" 
    }
  ]
}