 {
  "compilerOptions": {
    "outDir": "./lib/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES6",
    // "lib": [ "dom", "es5", "es2015.promise" ,"es2015", "es2017", "ES2020"],
    "sourceMap": true, // 调试 ts 源码 
    "allowJs": true, 
    // "experimentalDecorators": true, 去除js装饰器警告
    "esModuleInterop": true, // 允许export=导出，由import from 导入
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
      "@class/*": ["./src/class/*"],
    }
  },
  "include": [
    "./src"
  ]
}
