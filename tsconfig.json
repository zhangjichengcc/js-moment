 {
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true, // 调试 ts 源码  
    // "experimentalDecorators": true, 去除js装饰器警告
    "esModuleInterop": true, // 允许export=导出，由import from 导入
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
      "@class/*": ["./src/class/*"],
    }
  },
  "include": [
    "./src"
  ]
}
